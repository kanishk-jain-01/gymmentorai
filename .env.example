# Environment variables example file
# Copy this file to .env.local and fill in your values

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/gymmentor_dev"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# LLM Configuration - Configure ONE of the following providers:

# Option 1: OpenAI (default)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4o" # Optional, defaults to gpt-4o

# Option 2: Anthropic Claude
# ANTHROPIC_API_KEY="your-anthropic-api-key"
# ANTHROPIC_MODEL="claude-3-opus-20240229" # Optional, defaults to claude-3-opus-20240229

# Option 3: Google AI (Gemini)
# GOOGLE_AI_API_KEY="your-google-ai-api-key"
# GOOGLE_AI_MODEL="gemini-1.5-pro" # Optional, defaults to gemini-1.5-pro

# Option 4: Custom LLM API
# CUSTOM_LLM_API_KEY="your-custom-api-key"
# CUSTOM_LLM_API_URL="https://your-custom-llm-api-endpoint"
# CUSTOM_LLM_MODEL="your-model-name" # Optional 

# Stripe Configuration
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# Subscription Configuration
STRIPE_MONTHLY_PRICE_ID="your-monthly-price-id"
STRIPE_YEARLY_PRICE_ID="your-yearly-price-id"
TRIAL_DAYS=7 

# Limit Number of API Requests per day
DAILY_API_REQUEST_LIMIT=XX

# Email settings
EMAIL_SECRET="your-long-random-secret-key-for-email-tokens"